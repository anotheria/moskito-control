{
    "@applications": [
        {
            "name": "FirstApp",
            "@components": [
                {
                    "name": "localhost",
                    "category": "web",
                    "connectorType": "HTTP",
                    "location": "localhost:8080/moskitodemo"
                },
                {
                    "name": "server04",
                    "category": "web",
                    "connectorType": "HTTP",
                    "location": "server04.test.anotheria.net:8080/moskitodemo"
                },
                {
                    "name": "demo",
                    "category": "web",
                    "connectorType": "HTTP",
                    "location": "http://demo.moskito.anotheria.net/moskitodemo"
                }
            ],
            "@charts": [
                {
                    "name": "Sessions",
                    "@lines": [
                        {
                            "component": "localhost",
                            "accumulator": "SessionCount Cur Absolute"
                        },
                        {
                            "component": "server04",
                            "accumulator": "SessionCount Cur Absolute"
                        },
                        {
                            "component": "demo",
                            "accumulator": "SessionCount Cur Absolute"
                        },
                    ]
                },
                {
                    "name": "ThreadCount1",
                    "@lines": [
                        {
                            "component": "localhost",
                            "accumulator": "ThreadCount"
                        }
                    ]
                },
                {
                    "name": "ThreadCount2",
                    "@lines": [
                        {
                            "component": "server04",
                            "accumulator": "ThreadCount"
                        }
                    ]
                },
                {
                    "name": "ThreadCountAll",
                    "@lines": [
                        {
                            "component": "server04",
                            "accumulator": "ThreadCount",
                            "caption": "server04"
                        },
                        {
                            "component": "demo",
                            "accumulator": "ThreadCount",
                            "caption": "demo"
                        },
                        {
                            "component": "localhost",
                            "accumulator": "ThreadCount",
                            "caption": "localhost"

                        }
                    ]
                }
            ]
        },
        {
            "name": "SecondApp",
            "@components": [
                {
                    "name": "app1",
                    "category": "web",
                    "connectorType": "HTTP",
                    "location": "localhost:8080/moskitodemo"
                },
                {
                    "name": "app2",
                    "category": "web",
                    "connectorType": "HTTP",
                    "location": "localhost:8080/moskitodemo"
                },
                {
                    "name": "app3",
                    "category": "web",
                    "connectorType": "HTTP",
                    "location": "localhost:8080/moskitodemo"
                }
            ]
        }
    ],

    "@connectors": [
        {
            "type": "HTTP",
            "className": "org.moskito.control.connectors.HttpConnector"
        }
    ],

    "@statusUpdater": {
        "checkPeriodInSeconds": 10,
        "threadPoolSize": 10,
        "timeoutInSeconds": 60
    }
}