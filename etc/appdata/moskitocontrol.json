{
    "@applications": [
        {
            "name": "FirstApp",
            "@components": [
                {
                    "name": "localhost",
                    "category": "web",
                    "connectorType": "HTTP",
                    "location": "localhost:8080/moskitodemo"
                },
                {
                    "name": "server04",
                    "category": "web",
                    "connectorType": "HTTP",
                    "location": "server04.test.anotheria.net:8080/moskitodemo"
                },
                {
                    //not existing machine.
                    "name": "serverXYZ",
                    "category": "web",
                    "connectorType": "HTTP",
                    "location": "server44444.test.anotheria.net:8080/moskitodemo"
                }
            ],
            "@charts": [
                {
                    "name": "Sessions",
                    "@lines": [
                        {
                            "component": "localhost",
                            "accumulator": "SessionCount Cur Absolute"
                        },
                        {
                            "component": "server04",
                            "accumulator": "SessionCount Cur Absolute"
                        }
                    ]
                },
                {
                    "name": "ThreadCount1",
                    "@lines": [
                        {
                            "component": "localhost",
                            "accumulator": "ThreadCount"
                        }
                    ]
                },
                {
                    "name": "ThreadCount2",
                    "@lines": [
                        {
                            "component": "server04",
                            "accumulator": "ThreadCount"
                        }
                    ]
                }
            ]
        },
        {
            "name": "SecondApp",
            "@components": []
        }
    ],

    "@connectors": [
        {
            "type": "HTTP",
            "className": "org.moskito.control.connectors.HttpConnector"
        }
    ],

    "@statusUpdater": {
        "checkPeriodInSeconds": 10,
        "threadPoolSize": 10,
        "timeoutInSeconds": 60
    }
}