<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Central Health Monitoring System</display-name>

	<filter>
		<filter-name>MoSKitoControlFilter</filter-name>
		<filter-class>org.anotheria.moskito.control.ui.MoSKitoControlFilter</filter-class>
        <init-param>
            <param-name>path</param-name>
            <param-value>/control/</param-value>
        </init-param>
	</filter>
	<filter-mapping>
		<filter-name>MoSKitoControlFilter</filter-name>
		<url-pattern>/control/*</url-pattern>
	</filter-mapping>
	<welcome-file-list>
		<welcome-file>/control/main</welcome-file>
	</welcome-file-list>
	<!-- taglib definitions -->
    <listener>
		<listener-class>org.anotheria.moskito.control.StartListener</listener-class>
	</listener>

</web-app>
