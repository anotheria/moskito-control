{
    "defaultApplication" : "FirstApp",

    "@applications": [
        {
            "name": "FirstApp",
            "@components": [
                {
                    "name": "web01",
                    "category": "web",
                    "connectorType": "HTTP",
                    "location": "web01.google.com"
                },
                {
                    "name": "web02",
                    "category": "web",
                    "connectorType": "HTTP",
                    "location": "web02.google.com"
                },
                {
                    "name": "web03",
                    "category": "web2",
                    "connectorType": "HTTP",
                    "location": "web03.google.com"
                },
                {
                    "name": "web04",
                    "category": "web2",
                    "connectorType": "HTTP",
                    "location": "web04.google.com"
                }
            ],
            "@charts": [
                {
                    "name" : "Chart2",
                    "limit" : 100,
                    "@lines" : [
                        {
                            "component" : "web2: *",
                            "accumulator" : "ThreadCount",
                            "caption" : "web2 categories components"
                        },
                        {
                            "component" : "web01",
                            "accumulator" : "SessionCount Cur Absolute",
                            "caption" : "web01 component"
                        },
                        {
                            "component": "*",
                            "accumulator": "ThreadCount",
                            "caption": "all components"
                        },
                        {
                            "component" : "web : *2",
                            "accumulator" : "SessionCount Cur Absolute",
                            "caption" : "web category components ends with 2"
                        },
                        {
                            "component" : "web01",
                            "accumulator" : "ThreadCount"
                        }
                    ]
                }
            ],
            "dataWidgets": ["*"]
        },
        {
            "name": "SecondApp",
            "@components": []
        }
    ],

    "@connectors": [
        {
            "type": "HTTP",
            "className": "org.moskito.control.connectors.HttpConnector"
        },
        {
            "type": "NOOP",
            "className": "org.moskito.control.connectors.NoopConnector"
        }
    ],

    "historyItemsAmount": 111,
    "notificationsMutingTime" : 11,

    "@statusUpdater":{
        "checkPeriodInSeconds":11,
        "threadPoolSize":12,
        "timeoutInSeconds":13,
        "enabled":false
    },
    "@chartsUpdater": {
        "checkPeriodInSeconds": 22,
        "threadPoolSize": 23,
        "timeoutInSeconds": 24,
        "enabled": false
    },
    "@pluginsConfig": {
        "@plugins": [{
            "name": "plugin0_name",
            "configurationName": "plugin0_configurationName",
            "className": "net.anotheria.moskito.core.plugins.NoOpPlugin"
        }]
    },
    "@dataprocessing": {
        "@processing": ["processing processing processing"],
        "@preprocessing": ["preprocessing preprocessing preprocessing"],
        "@widgets": [
            {
                "type": "widget0_type",
                "caption": "widget0_caption",
                "mapping": "widget0_mapping=mapping",
                "name": "widget0_name"
            }
        ],
        "@thresholds":[
//            "<guardedVariableName> <direction> <value> <color> <targetVariableName> ",
            "processing data thresholds",

            //usual
            "full DOWN 10 GREEN",
            "full UP 10 YELLOW",
            "full UP 15 ORANGE",
            "full UP 20 RED",
            "full UP 25 PURPLE",

            //short config
            "short DOWN 10 YELLOW",
            "short UP 10 ORANGE",
            "short UP 15 RED",

            //ORANG instead ORANGE
            "wrong DOWN 10 GREEN",
            "wrong UP 10 YELLOW",
            "wrong UP 15 ORANG",
            "wrong UP 20 RED",
            "wrong UP 25 PURPLE",

            //short config with specific name
            "named DOWN 10 GREEN",
            "named UP 10 ORANGE name4.T"
        ]
    },
    "trackUsage": false
}